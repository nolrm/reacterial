{
  "name": "reacterial",
  "description": "Reacterial is a versatile boilerplate for building modern web applications like CRM systems, admin dashboards, and enterprise portals. Built with Next.js, React, Material-UI (MUI), and Redux for scalable state management. Features include authentication, responsive layouts, data visualization, and customizable components.",
  "author": "Marlon M",
  "version": "0.1.0",
  "private": true,
  "scripts": {
    "dev": "next dev",
    "build": "npm run format && npm run lint && next build",
    "start": "next start",
    "lint": "next lint",
    "format": "prettier --write \"**/*.{js,ts,tsx,vue,css}\"",
    "test": "jest --watch",
    "test:ci": "jest --ci",
    "reset-db": "node src/db/scripts/reset-db.js"
  },
  "dependencies": {
